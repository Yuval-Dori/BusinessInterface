@model BusinessesInterface.Models.TimeSearch

@{
    ViewBag.Title = "TimeSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Choose Date</h2>


@using (Html.BeginForm("ShowDateSearchResults", "DeviceUsage", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.TimeToSearch, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.TimeToSearch)
                @Html.ValidationMessageFor(model => model.TimeToSearch, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<script src="~/bundles/jqueryval"></script>